<ul class="maintabmenu">
    <li class="current"><a href="#">Pages</a></li>
</ul><!--maintabmenu-->

<div class="content">

    <div class="contenttitle radiusbottom0">
        <h2 class="table"><span>Page Content</span></h2>
    </div><!--contenttitle-->

    <table cellpadding="0" cellspacing="0" border="0" class="stdtable" >
        <colgroup>
            <col class="con0" /><col class="con1" />
            <col class="con0" /><col class="con1" />
        </colgroup>
        <thead>
            <tr>
                <th class="head0">Page name</th>  <th class="head1">Last update</th>
                <th class="head0">Text</th>       <th class="head1">&nbsp;</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th class="head0">Page name</th>  <th class="head1">Last update</th>
                <th class="head0">Text</th>       <th class="head1">&nbsp;</th>
            </tr>
        </tfoot>
        <tbody>
            {if !empty($content)}
                {foreach $page in $content}
                    <tr>
                        <td>{echo $page->pageName}</td>
                        <td>{echo $page->modified}</td>
                        <td>{echo $page->body}</td>
                        <td>
                            {if $isAdmin}<a href="/admin/content/edit/{echo $page->id}" class="btn btn3 btn_pencil" title="Edit"></a>{/if}
                        </td>
                    </tr>
                {/foreach}
            {/if}
        </tbody>
    </table>
</div>
<br class="clear-all"/><br />