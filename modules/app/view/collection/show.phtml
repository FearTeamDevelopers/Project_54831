<h1 class="visuallyhidden">Kolekce</h1>
<div class="section-content-collection">
    {if ($collecarr && !empty($collecarr))}
        {foreach $collection in $collecarr}
            <p class="collection-title">
                {echo $collection->title}
                {if $collection->date != ""}{echo " ".$collection->date}{/if}
                {if $collection->photographer != ""}{echo " / ".$collection->photographer}{/if}
            </p>
            <div class="section-content-photos">
                {script $colphotos=$collection->photos}
                {if !empty($colphotos)}
                    {foreach $photo in $colphotos}
                        <a href="{echo $photo->imgMain}" class="highslide" 
                                title="{echo $photo->description}" onclick="return hs.expand(this, configcollection)">
                            <img src="{echo $photo->imgThumb}" height="140px" alt="Marko.in" title="{echo $photo->description}"/>
                        </a>
                    {/foreach}
                {/if}
                {else}
                    <p class="message-empty">K dispozici nejsou žádné fotografie</p>
                {/else}
            </div>
            <br/><hr/><br/>

            <div class="section-content-videos">
                {script $colvideos=$collection->videos}
                {if !empty($colvideos)}
                    {foreach $video in $colvideos}
                        <iframe width="{echo $video->width}" height="{echo $video->height}" 
                            src="{echo $video->path}" frameborder="0" allowfullscreen></iframe>
                    {/foreach}
                {/if}
            </div>
           
        {/foreach}
    {/if}
    {else}
        <p class="message-empty">Žádné kolekce</p>
    {/else}
</div>